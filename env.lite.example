# LinkedIn Agent Lite - Environment Configuration
# Copy this file to .env and fill in your values
#
# This is a minimal configuration for the lite version
# No database, Redis, Celery, or monitoring needed

# =============================================================================
# LLM Configuration
# =============================================================================
# Provider: ollama, openai, or anthropic
LLM_PROVIDER=ollama
LLM_MODEL=llama3.2
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=500

# Ollama URL (if using ollama)
OLLAMA_URL=http://localhost:11434

# OpenAI API Key (if using openai)
# OPENAI_API_KEY=sk-...

# Anthropic API Key (if using anthropic)
# ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# LinkedIn Credentials
# =============================================================================
LINKEDIN_EMAIL=your_email@gmail.com
LINKEDIN_PASSWORD=your_password

# Scraper settings
SCRAPER_HEADLESS=true
SCRAPER_RATE_LIMIT=10

# =============================================================================
# Email Notifications (SMTP)
# =============================================================================
# For local testing, use Mailpit:
#   docker run -d -p 1025:1025 -p 8025:8025 axllent/mailpit
#   Then view emails at http://localhost:8025

SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USE_TLS=false
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@linkedin-agent.local

# Email to receive notifications
NOTIFICATION_EMAIL=your_email@gmail.com
NOTIFICATION_ENABLED=true

# =============================================================================
# Profile Configuration
# =============================================================================
PROFILE_PATH=config/profile.yaml

# =============================================================================
# Application Settings
# =============================================================================
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# IMPORTANT: These are NOT needed for lite mode
# =============================================================================
# DATABASE_URL=            # Not needed - no database
# REDIS_URL=               # Not needed - no caching
# CELERY_BROKER_URL=       # Not needed - no background jobs
# OTEL_ENABLED=false       # Not needed - no monitoring
